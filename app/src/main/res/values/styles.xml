        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/quantum_googyellow300</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorSurface">@color/places_text_black_alpha_87</item>
